{
  "expo": {
    "name": "Mechanic Fixes",
    "slug": "mechanic-fixes",
    "owner": "jbian",
    "version": "1.0.6",
    "orientation": "portrait",
    "icon": "./assets/images/mechanic-fixes.png",
    "scheme": "mechanicfixes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "privacy": "public",
    "description": "Aplicación móvil sencilla desarrollada por Dieselsoft que proporciona acceso a soluciones mecánicas y eléctricas para camiones Volvo. Consulta soluciones técnicas detalladas con pasos de diagnóstico, herramientas necesarias, precauciones de seguridad y números de parte originales. Ideal para técnicos, mecánicos y estudiantes de mecánica automotriz.",
    "privacyPolicy": "https://sites.google.com/view/poltica-de-privacidad-mechanic/p%C3%A1gina-principal",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mecanicfixes.ds2025",
      "googleServicesFile": "./GoogleService-Info.plist",
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryFileTimestamp",
            "NSPrivacyAccessedAPITypeReasons": ["C617.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": ["CA92.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategorySystemBootTime",
            "NSPrivacyAccessedAPITypeReasons": ["35F9.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryDiskSpace",
            "NSPrivacyAccessedAPITypeReasons": ["E174.1"]
          }
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "mecanic_ixes.ds_2025",
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "backgroundColor": "#0B1623",
        "foregroundImage": "./assets/images/mechanic-fixes.png"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "googleServicesFile": "./google-services.json",
      "enableProguardInReleaseBuilds": false,
      "enableShrinkResourcesInReleaseBuilds": false,
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0B1623"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "minSdkVersion": 25,
            "enableProguardInReleaseBuilds": false,
            "enableShrinkResourcesInReleaseBuilds": false,
            "useLegacyPackaging": false,
            "packagingOptions": {
              "pickFirst": [
                "lib/x86/libc++_shared.so",
                "lib/x86_64/libc++_shared.so",
                "lib/armeabi-v7a/libc++_shared.so",
                "lib/arm64-v8a/libc++_shared.so"
              ]
            },
            "enableMinifyInReleaseBuilds": false
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "31585ef3-eceb-4e3a-a4bc-58d6d69f0118"
      }
    }
  }
}
