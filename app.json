{
  "expo": {
    "name": "Mechanic Fixes",
    "slug": "mechanic-fixes",
    "owner": "jbian",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/mechanic-fixes.png",
    "scheme": "mechanicfixes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "privacy": "public",
    "description": "Aplicación profesional para documentar y gestionar reparaciones mecánicas y eléctricas de vehículos. Permite a los técnicos capturar fotos, videos y notas de audio sobre diagnósticos y trabajos realizados.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mecanicfixes.ds2025",
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "La app necesita acceso a la cámara para tomar fotos de las reparaciones y diagnósticos del vehículo",
        "NSPhotoLibraryUsageDescription": "La app necesita acceso a tus fotos para que puedas seleccionar y adjuntar imágenes de las reparaciones realizadas",
        "NSPhotoLibraryAddUsageDescription": "La app necesita permiso para guardar las fotos de las reparaciones en tu galería",
        "NSMicrophoneUsageDescription": "La app necesita acceso al micrófono para grabar notas de voz sobre las reparaciones"
      }
    },
    "android": {
      "package": "mecanic_ixes.ds_2025",
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "backgroundColor": "#0B1623",
        "foregroundImage": "./assets/images/mechanic-fixes.png"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "googleServicesFile": "./google-services.json",
      "enableProguardInReleaseBuilds": false,
      "enableShrinkResourcesInReleaseBuilds": false,
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0B1623"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "La app necesita acceso a tus fotos",
          "cameraPermission": "La app necesita acceso a la cámara"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "enableProguardInReleaseBuilds": false,
            "enableShrinkResourcesInReleaseBuilds": false,
            "useLegacyPackaging": false,
            "packagingOptions": {
              "pickFirst": [
                "lib/x86/libc++_shared.so",
                "lib/x86_64/libc++_shared.so",
                "lib/armeabi-v7a/libc++_shared.so",
                "lib/arm64-v8a/libc++_shared.so"
              ]
            },
            "enableMinifyInReleaseBuilds": false
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "31585ef3-eceb-4e3a-a4bc-58d6d69f0118"
      }
    }
  }
}
