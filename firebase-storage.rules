rules_version = '2';

// Reglas de Firebase Storage para el proyecto mecanic-fixs
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura para todos los usuarios autenticados
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Permitir escritura en la carpeta problems/ para usuarios autenticados
    match /problems/{problemId}/{allSubPaths=**} {
      allow write: if request.auth != null;
    }

    // Regla temporal para debugging - ELIMINAR DESPUÃ‰S
    // match /{allPaths=**} {
    //   allow read, write: if true;
    // }
  }
}
